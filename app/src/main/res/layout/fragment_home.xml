<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/categorizeQuizBtnLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/heading1"
        android:text="@string/home_title"/>

    <LinearLayout
        android:id="@+id/categorizeQuizBtnLay"
        app:layout_constraintTop_toBottomOf="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/half_space"
        app:layout_constraintBottom_toTopOf="@+id/quizStartBtn"
        android:orientation="vertical">

        <Button
            android:id="@+id/quizStartBtnCOV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/half_space"
            android:text="Control of vehicle"/>

        <Button
            android:id="@+id/quizStartBtnLMROTR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/half_space"
            android:text="Legal Matters/Rules of the Road"/>

        <Button
            android:id="@+id/quizStartBtnMR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/half_space"
            android:text="Managing Risk"/>

        <Button
            android:id="@+id/quizStartBtnSARD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/half_space"
            android:text="Safe and Responsible Driving"/>

        <Button
            android:id="@+id/quizStartBtnTM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/half_space"
            android:text="Technical Matters"/>

    </LinearLayout>

    <Button
        android:id="@+id/quizStartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_space"
        app:layout_constraintTop_toBottomOf="@+id/categorizeQuizBtnLay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Quick Start"/>

</androidx.constraintlayout.widget.ConstraintLayout>