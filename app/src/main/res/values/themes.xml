<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Theme.Material3.DayNight.NoActionBar-->
    <!--Theme.AppCompat.Light-->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
        <!--<item name="android:windowBackground">@drawable/z_layer_launch</item>-->
        <item name="android:textColorHint">@color/gray_light_text</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow_white</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:editTextColor">@color/gray_medium_text</item>
        <item name="searchHintIcon">@null</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:background">@color/primaryDark</item>-->
        <item name="android:windowBackground">@color/primaryDark</item>
        <item name="android:colorBackground">@color/primaryDark</item>

        <item name="materialCalendarStyle">@style/ThemeOverlay.Material3.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/MaterialFullscreenTheme</item>
        <item name="materialCalendarTheme">@style/MaterialTheme</item>

        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/secondary</item>
        <item name="colorOnError">@color/secondary</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="scrimBackground">@color/white</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1
        </item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2
        </item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3
        </item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>

    </style>

    <!-- Full screen theme material date picker "ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen"-->
    <style name="MaterialFullscreenTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Material date picker theme -->
    <style name="MaterialTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- No navbar theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.AuthTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textCursorDrawable">@drawable/z_shape_cursor_white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- The launcher theme. -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:background">@drawable/z_layer_launch</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Search theme -->
    <style name="Search" parent="AppTheme.NoActionBar">
        <item name="searchHintIcon">@null</item>
    </style>

    <!-- Full screen theme -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Bottom navbar theme -->
    <style name="BottomNavbar" parent="AppTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/primary</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/z_shape_cursor_white</item>
    </style>

    <style name="TabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/gray_light_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="FilledBoxEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/white</item>
    </style>

    <!--Home Filter Theme-->
    <style name="HomeFilterTheme" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Filter_Tooltip</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="backgroundColor">@color/TRANSPARENT</item>
        <item name="shapeAppearance">@style/ShapeAppearance</item>
        <item name="colorContainer">@color/TRANSPARENT</item>
        <item name="colorSurface">@color/TRANSPARENT</item>
        <item name="minSeparation">40dp</item>
        <item name="android:disabledAlpha">0.4</item>

    </style>

    <style name="Filter_Tooltip" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="minSeparation">40dp</item>
        <!--This is the Tooltip Background Color. In case you don't want a background change it to @android:color/transparent -->
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
        <item name="minSeparation">40dp</item>

    </style>

    <style name="ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="minSeparation">40dp</item>
    </style>
</resources>